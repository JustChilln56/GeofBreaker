<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="36dp"
            android:layout_marginEnd="8dp"
            app:srcCompat="@drawable/geofbreaker" />


        <Button
            android:id="@+id/play2"
            android:layout_width="210dp"
            android:layout_height="45dp"
            android:layout_marginTop="100dp"
            android:layout_gravity="center"
            android:background="@drawable/rounded_button"
            android:text="play"
            android:textColor="@android:color/white"
            android:textSize="33sp" />

        <Button
            android:id="@+id/sound3"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/rounded_button"
            android:layout_marginTop="20dp"
            android:text="sound"
            android:textColor="@android:color/white"
            android:textSize="24sp" />

        <Button
            android:id="@+id/leaderboard"
            android:layout_width="210dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_button"
            android:text="leaderboard"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:src="@drawable/howtoplay"></ImageView>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:gravity="center"
            android:text="Press and hold left half of screen to move paddle left;\n Press and hold right half of screen to move paddle right"
            android:textSize="14sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>